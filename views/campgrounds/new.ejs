
<!DOCTYPE html>
<html>
    <head>
        <title>Sleep'n Spots</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
        <link rel="stylesheet" href="/stylesheets/main.css"
        
    </head>
    <body>
    
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <div class="navbar-header">
               <a class="navbar-brand" href="/campgrounds"><span class="glyphicon glyphicon-tent" aria-hidden="true"></span> Sleep'n Spots</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <% if(!currentUser){ %>
                        <li><a href="/login">Login</a></li>
                        <li><a href="/register">Sign Up</a></li>
                    <% } else { %>
                        <li><a href="#">Hello <%= currentUser.username %>!</a> </li>
                        <li><a href="/logout">Logout</a></li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <% if(error && error.length > 0){ %>
            <div class="alert alert-danger" role="alert">
                <%= error %>
            </div>
        <% } %>
        <% if(success && success.length > 0){ %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
        <% } %>
    </div>
    
<!--Header ^^^-->

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Create a new Campground</h1>
        <div style="width: 60%; margin: 40px auto;">
            <form action="/campgrounds" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location" placeholder="location"></input>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price" min="0.00" step="1.00"></input>
                </div>
                <!--<div class="form-group">-->
                <!--    <input class="form-control" type="number" name="lat" placeholder="37.12345" min="0.00"></input>-->
                <!--    <input class="form-control" type="number" name="lng" placeholder="122.12345" min="0.00"></input>-->
                <!--</div>-->
                <!--<div id="map"></div>-->
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url"></input>
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="10"  name="description" placeholder="description"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>


